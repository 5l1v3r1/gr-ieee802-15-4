<?xml version="1.0"?>
<block>
  <name>RIME Stack</name>
  <key>ieee802_15_4_rime_stack</key>
  <category>IEEE802.15.4</category>
  <import>import gnuradio.ieee802_15_4 as gr_ieee802_15_4</import>
  <make>gr_ieee802_15_4.rime_stack($bc_channels, $uc_channels, $ruc_channels, $rime_add)</make>

  <param>
    <name>Broadcast Channels</name>
    <key>bc_channels</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Unicast Channels</name>
    <key>uc_channels</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Reliable Unicast Channels</name>
    <key>ruc_channels</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>RIME Address</name>
    <key>rime_add</key>
    <type>int_vector</type>
  </param>

  <sink>
    <name>bcin</name>
    <type>message</type>
    <nports>len($bc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>ucin</name>
    <type>message</type>
    <nports>len($uc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>rucin</name>
    <type>message</type>
    <nports>len($ruc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>fromMAC</name>
    <type>message</type>
    <nports>1</nports>
  </sink>

  <source>
    <name>bcout</name>
    <type>message</type>
    <nports>len($bc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>ucout</name>
    <type>message</type>
    <nports>len($uc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>rucout</name>
    <type>message</type>
    <nports>len($ruc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>toMAC</name>
    <type>message</type>
    <nports>1</nports>
  </source>
</block>
